{
  "manifest_version": 3,
  "name": "MapTools",
  "version": "1.0.1",
  "description": "Tools For Map",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "image/icon.png"
    }
  },
  "icons": {
    "48": "image/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "css/*",
        "js/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "clipboardRead",
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}